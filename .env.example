# Base URL for the application under test
BASE_URL=https://the-internet.herokuapp.com

# Test credentials (default values - override in .env for different environments)
TEST_USERNAME=tomsmith
TEST_PASSWORD=SuperSecretPassword!

# Test execution settings
CI=false
HEADLESS=true
TIMEOUT=30000
RETRIES=2

# Browser settings
BROWSER=chromium

# Test filtering (optional)
# TEST_GREP=@smoke  # Run only tests matching this pattern
# TEST_GREP_INVERT=@wip  # Skip tests matching this pattern

# Worker configuration (optional - defaults to auto)
# WORKERS=4

# Report settings
REPORT_OPEN=on-failure  # Options: always, never, on-failure

# File paths
SCREENSHOTS_DIR=./screenshots
TEST_RESULTS_DIR=./test-results
REPORTS_DIR=./playwright-report
